extends layout
block extraHeader
    title Login
block content
    //img(src="/img/background.jpg", id="bg", alt="")
    .container
        #myStyle
            h1 Login
            p.lead pre alpha build
            h4 #{info}
            br
            if(!user)
                form(role='form', action="/login",method="post", id="login", style='max-width: 300px;')
                    .form-group
                        input.form-control(type='text', name="username", placeholder='Enter Username')
                    .form-group
                        input.form-control(type='password', name="password", placeholder='Password')
                    .errors
                    button.btn.btn-default(type='submit') Submit
                    a(href='/')
                        button.btn.btn-primary(type="button") Cancel
            if(user)
                h2 You're already logged in.
                a(href='/')
                    button.btn.btn-primary(type="button") My Profile