extends layout
block extraHeader
    title Register
block content
    //img(src="/img/background.jpg", id="bg", alt="")
    .container
        #myStyle
            h1 Register
            p.lead pre alpha build
            h4 #{info}
            br
            form(role='form', action="/register",method="post", id='register',style='max-width: 300px;')
                .form-group
                    br
                    input.form-control(type='text', name="username", placeholder='Enter Username')
                .form-group
                    input.form-control(type='text', name="name", placeholder='Full Name')
                .form-group
                    input.form-control(type='password', name="password", placeholder='Password')
                .form-group
                    input.form-control(type='text', name="title", placeholder='Title')
                .form-group
                    input.form-control(type='text', name="propic", placeholder='Profile Picture(png/jpg)')
                    br
                .errors
                button.btn.btn-default(type='submit') Submit
                a(href='/')
                    button.btn.btn-primary(type="button") Cancel
        #footerindex
          #myStyle
              a(href="/about")
                  button#footbtn(type="button") About
              a(href="/explore")
                  button#footbtn(type="button") Explore
        &nbsp;